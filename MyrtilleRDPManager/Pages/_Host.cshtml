@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace MyrtilleRDPManager.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="MyrtilleRDPManager.styles.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="favicon.png"/>
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script src="js/myrtille/display.js"></script>
    <script src="js/myrtille/network.js"></script>
    <script src="js/myrtille/user.js"></script>
    <script src="js/myrtille/myrtille.js"></script>

    <script>
        window.startMyrtille = function (displayId, gatewayUrl, serverAddress, username, password) {
            console.log("Myrtille başlatılıyor... Hedef: " + serverAddress);

            var config = {
                httpServerUrl: gatewayUrl,
                stateless: false,
                wsEnabled: true
            };

            var dialog = null;
            var display = new Myrtille.Display(config, dialog, displayId);
            var network = new Myrtille.Network(config, dialog, display);
            var user = new Myrtille.User(config, dialog, display, network);
            var myrtille = new Myrtille.Myrtille(config, dialog, display, network, user);

            myrtille.init();

            // Bağlantı isteğini gönder
            network.send(
                network.getXmlHttpUrl() +
                "&command=RemoteSession" +
                "&serverAddress=" + encodeURIComponent(serverAddress) +
                "&userName=" + encodeURIComponent(username) +
                "&userPassword=" + encodeURIComponent(password) +
                "&width=" + display.getBrowserWidth() +
                "&height=" + display.getBrowserHeight() +
                "&connect=1"
            );
        };
    </script>
</body>

</html>
