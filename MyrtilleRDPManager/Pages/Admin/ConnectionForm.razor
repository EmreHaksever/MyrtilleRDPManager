@page "/admin/connections/new"
@page "/admin/connections/edit/{Id:int}"

@using MyrtilleRDPManager.Data
@using MyrtilleRDPManager.Services
@using Microsoft.EntityFrameworkCore

@inject AppDbContext DbContext
@inject NavigationManager NavManager
@inject EncryptionService EncryptionService

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">
                @(Id == 0 ? "Yeni Sunucu Ekle" : "Sunucuyu Düzenle")
            </h3>
        </div>
        <div class="card-body">
            <EditForm Model="@connection" OnValidSubmit="HandleValidSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger">@errorMessage</div>
                }

                <div class="mb-3">
                    <label class="form-label">Bağlantı Adı (Örn: Muhasebe PC)</label>
                    <InputText class="form-control" @bind-Value="connection.Name" placeholder="Sunucu için bir isim verin" />
                    <ValidationMessage For="@(() => connection.Name)" />
                </div>

                <div class="row">
                    <div class="col-md-8 mb-3">
                        <label class="form-label">Host (IP Adresi veya Domain)</label>
                        <InputText class="form-control" @bind-Value="connection.Host" placeholder="192.168.1.X veya server.local" />
                        <ValidationMessage For="@(() => connection.Host)" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Port</label>
                        <InputNumber class="form-control" @bind-Value="connection.Port" />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Protokol</label>
                    <InputSelect class="form-select" @bind-Value="connection.Protocol">
                        <option value="rdp">RDP (Uzak Masaüstü)</option>
                        <option value="ssh">SSH (Terminal)</option>
                    </InputSelect>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Kullanıcı Adı (Remote User)</label>
                        <InputText class="form-control" @bind-Value="connection.RemoteUsername" />
                        <ValidationMessage For="@(() => connection.RemoteUsername)" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Şifre</label>
                        <input type="password" class="form-control @(passwordInvalid ? "is-invalid" : "")"
                               @bind="plainPassword"
                               placeholder="@(Id > 0 ? "Değiştirmek istemiyorsanız boş bırakın" : "Zorunlu")" />
                        @if (passwordInvalid)
                        {
                            <div class="invalid-feedback">Yeni bağlantı oluştururken şifre zorunludur.</div>
                        }
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a href="/admin/connections" class="btn btn-secondary">İptal</a>
                    <button type="submit" class="btn btn-success">
                        <span class="oi oi-check"></span> Kaydet
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    // DÜZELTME: 'required' alanları burada boş string ile başlatmak ZORUNDASIN.
    // Yoksa "Unassigned variable" hatası alırsın.
    private Connection connection = new Connection
    {
        Name = "",
        Host = "",
        RemoteUsername = "",
        EncryptedPassword = "" // Başlangıçta boş, Submit anında dolacak.
    };

    private string plainPassword = "";
    private string? errorMessage;
    private bool passwordInvalid = false;

    protected override async Task OnInitializedAsync()
    {
        // Varsayılanlar
        connection.Port = 3389;
        connection.Protocol = "rdp";

        if (Id > 0)
        {
            var existing = await DbContext.Connections.FindAsync(Id);
            if (existing != null)
            {
                connection = existing;
                // Mevcut şifreyi asla geri çözüp göstermiyoruz (Güvenlik Kuralı #1).
            }
            else
            {
                errorMessage = "Kayıt bulunamadı.";
            }
        }
    }

    private async Task HandleValidSubmit()
    {
        errorMessage = null;
        passwordInvalid = false;

        // 1. Şifre Validasyonu (Modelde olmadığı için manuel yapıyoruz)
        if (Id == 0 && string.IsNullOrEmpty(plainPassword))
        {
            passwordInvalid = true;
            return; // İşlemi durdur
        }

        // 2. Şifreleme İşlemi
        if (!string.IsNullOrEmpty(plainPassword))
        {
            connection.EncryptedPassword = EncryptionService.Encrypt(plainPassword);
        }

        // DİKKAT: Düzenleme modunda şifre boş bırakıldıysa,
        // connection.EncryptedPassword zaten veritabanındaki eski değeri taşıyor. Dokunmuyoruz.

        try
        {
            if (Id == 0)
            {
                DbContext.Connections.Add(connection);
            }
            else
            {
                DbContext.Connections.Update(connection);
            }

            await DbContext.SaveChangesAsync();
            NavManager.NavigateTo("/admin/connections");
        }
        catch (Exception ex)
        {
            errorMessage = $"Veritabanı hatası: {ex.Message}";
        }
    }
}